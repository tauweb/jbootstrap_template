<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE install PUBLIC "-//Joomla! 2.5//DTD template 1.0//EN" "http://www.joomla.org/xml/dtd/2.5/template-install.dtd">
<extension version="3.1" type="template" client="site">
	<name>JBootstrap_Template</name>
	<version>0.1 alpha</version>
	<creationDate>2/16/2016</creationDate>
	<author>Tkachenko Aleksey</author>
	<authorEmail>info@tauweb.ru</authorEmail>
	<copyright>Copyright (C) 2005 - 2015 Open Source Matters, Inc. All rights reserved.</copyright>
	<description>TPL_JBOOTSTRAP_TEMPLATE_XML_DESCRIPTION</description>
	<files>
		<filename>component.php</filename>
		<filename>error.php</filename>
		<filename>favicon.ico</filename>
		<filename>index.php</filename>
		<filename>templateDetails.xml</filename>
		<filename>template_preview.png</filename>
		<filename>template_thumbnail.png</filename>
		<folder>css</folder>
		<folder>html</folder>
		<folder>images</folder>
		<folder>img</folder>
		<folder>js</folder>
		<folder>language</folder>
		<folder>less</folder>
	</files>
	<positions>
		<position>header-horizontal-menu</position>
		<position>banner</position>
		<position>debug</position>
		<position>position-0</position>
		<position>position-1</position>
		<position>position-2</position>
		<position>position-3</position>
		<position>position-4</position>
		<position>position-5</position>
		<position>position-6</position>
		<position>position-7</position>
		<position>position-8</position>
		<position>position-9</position>
		<position>position-10</position>
		<position>position-11</position>
		<position>position-12</position>
		<position>position-13</position>
		<position>position-14</position>
		<position>top-pre-first</position>
		<position>top-first-left</position>
		<position>top-first-center</position>
		<position>top-first-right</position>
		<position>top-pre-second</position>
		<position>top-second-left</position>
		<position>top-second-center</position>
		<position>top-second-right</position>
		<position>top-pre-third</position>
		<position>top-third-1</position>
		<position>top-third-2</position>
		<position>top-third-3</position>
		<position>top-third-4</position>
		<position>footer</position>
	</positions>
	<languages folder="language">
		<language tag="en-GB">en-GB/en-GB.tpl_jbootstrap_template.ini</language>
		<language tag="en-GB">en-GB/en-GB.tpl_jbootstrap_template.sys.ini</language>
		<language tag="ru-RU">en-GB/ru-RU.tpl_jbootstrap_template.ini</language>
		<language tag="ru-RU">en-GB/ru-RU.tpl_jbootstrap_template.sys.ini</language>
	</languages>
	<config>
		<fields name="params">
			<fieldset name="advanced">
				<field name="templateColor" class="" type="color" default="#08C"
					label="TPL_JBOOTSTRAP_TEMPLATE_COLOR_LABEL"
					description="TPL_JBOOTSTRAP_TEMPLATE_COLOR_DESC" />

				<field name="templateBackgroundColor" class="" type="color" default="#F4F6F7"
					label="TPL_JBOOTSTRAP_TEMPLATE_BACKGROUND_COLOR_LABEL"
					description="TPL_JBOOTSTRAP_TEMPLATE_BACKGROUND_COLOR_DESC" />

				<field name="logoFile" class="" type="media" default=""
					label="TPL_JBOOTSTRAP_TEMPLATE_LOGO_LABEL"
					description="TPL_JBOOTSTRAP_TEMPLATE_LOGO_DESC" />
					
				<field name="sitetitle"  type="text" default=""
					label="JGLOBAL_TITLE"
					description="JFIELD_ALT_PAGE_TITLE_LABEL"
					filter="string" />

				<field name="sitedescription"  type="text" default=""
					label="JGLOBAL_DESCRIPTION"
					description="JGLOBAL_SUBHEADING_DESC"
					filter="string" />

				<field name="googleFont"
					type="radio"
					class="btn-group btn-group-yesno"
					default="1"
					label="TPL_JBOOTSTRAP_TEMPLATE_FONT_LABEL"
					description="TPL_JBOOTSTRAP_TEMPLATE_FONT_DESC"
				>
					<option value="1">JYES</option>
					<option value="0">JNO</option>
				</field>

				<field name="googleFontName" class="" type="text" default="Open+Sans"
					label="TPL_JBOOTSTRAP_TEMPLATE_FONT_NAME_LABEL"
					description="TPL_JBOOTSTRAP_TEMPLATE_FONT_NAME_DESC" />

				<field name="fluidContainer"
					type="radio"
					class="btn-group btn-group-yesno"
					default="0"
					label="TPL_JBOOTSTRAP_TEMPLATE_FLUID_LABEL"
					description="TPL_JBOOTSTRAP_TEMPLATE_FLUID_DESC"
				>
					<option value="1">TPL_JBOOTSTRAP_TEMPLATE_FLUID</option>
					<option value="0">TPL_JBOOTSTRAP_TEMPLATE_STATIC</option>
				</field>
			</fieldset>
		</fields>
	</config>
</extension>
